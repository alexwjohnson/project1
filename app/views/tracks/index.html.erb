<h1>All Tracks</h1>
<% @tracks.each do |track| %>
    <div class="card d-flex flex-row  mb-3" style="width: 10rem;">
        <div class="card-body">
            <p>
                <%= link_to track.title, track %>
            </p>   
            <%= cl_image_tag(track.image, :width=>100, :crop=>"thumb") %>
        </div>
    </div>
<% end %>